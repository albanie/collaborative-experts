{
    "inherit_from": "configs/base_config.json",
    "eval_mode": "test_run",
    "experts": {
        "modalities": [
            "imagenet.resnext101_32x48d.0",
            "r2p1d.r2p1d-ig65m.0",
            "imagenet.senet154.0",
            "scene.densenet161.0",
            "i3d.i3d.0",
            "face",
            "ocr",
            "audio",
            "speech"
        ],
        "face_dim": 512
    },
    "arch": {
        "type": "CENet",
        "args": {
            "keep_missing_modalities": false,
            "use_ce": "pairwise",
            "use_mish": 1,
            "use_bn_reason": 1,
            "num_g_layers": 3,
            "num_h_layers": 0,
            "include_self": 1,
            "l2renorm": false,
            "randomise_feats": "",
            "vlad_clusters": {
                "ocr": 43,
                "text": 28,
                "audio": 8,
                "speech": 19,
                "detection-sem": 50
            },
            "ghost_clusters": {
                "text": 1,
                "ocr": 1,
                "audio": 1,
                "speech": 1
            },
            "mimic_ce_dims": 0,
            "test_caption_mode": "indep"
        }
    },
    "data_loader": {
        "type": "ExpertDataLoader",
        "args": {
            "dataset_name": "MSRVTT",
            "data_dir": "data/MSRVTT",
            "split_name": "full-val",
            "batch_size": 64,
            "fuse_captions": false,
            "num_test_captions": 1,
            "max_tokens": {
                "ocr": 49,
                "text": 37,
                "audio": 29,
                "speech": 32,
                "openpose": 50,
                "detection": 12,
                "detection-sem": 100
            }
        }
    },
    "loss": {
        "type": "MaxMarginRankingLoss",
        "args": {
            "margin": 0.09381161988446174,
            "fix_norm": true
        }
    },
    "trainer": {
        "epochs": 100
    },
    "visualizer": {
        "args":{
            "src_video_dir": "data/MSRVTT/videos/all"
        }
    },
    "eval_settings": {
        "data_loader": {
            "args":{
                "split_name": "full-test",
                "num_test_captions": 20
            }
        },
        "tester": {
            "save_dir": "data/saved/",
            "verbosity": 2
        },
        "disable_gpu": true
    }
}